@model BookStore.ViewModels.BookAuthorViewModel

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>BookAuthorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                    <input asp-for="BookId" readonly class="form-control" />
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                    <input type="file" name="File" asp-for="Description" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                    <img src="~/uploads/@Model.ImageUrl" style="width:124px;" class="img-thumbnail" />
            </div>
                <input type="hidden" name="ImageUrl" asp-for="Description" class="form-control" />
            <div class="form-group">
                    <label asp-for="AuthorId" class="control-label"></label>
                    @*problem*@
                    <select asp-for="AuthorId" asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(Model.Authors, "Id", "FullName"))">  <option>Please select one</option> </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
